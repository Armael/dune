(jbuild_version 1)

(rule
 ((targets (jbuilder.1))
  (action  (with-stdout-to ${@}
            (run ${bin:jbuilder} --help=groff)))))

(install
 ((section man)
  (package jbuilder)
  (files (jbuilder.1))))

(include jbuild.inc)

(rule
 (with-stdout-to jbuild.inc.gen
  (run bash ${path:update-jbuild.sh} ${bin:jbuilder})))

(alias
 ((name runtest)
  (action (diff jbuild.inc jbuild.inc.gen))))
